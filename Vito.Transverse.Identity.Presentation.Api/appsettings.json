  "EmailSettings": {
    "ServerName": "smtp.gmail.com",
    "SenderEmail": "put-email-here",
    "UserName": "put-user-here",
    "Password": "put-psw-here",
    "Port": 587,
    "EnableSsl": true
  },
  "FeatureFlagsSettings": {
    "AuditsFeature": true,
    "CacheFeature": true,
    "UsersFeature": true,
    "ApplicationsFeature": true,
    "CompaniesFeature": true,
    "LocalizationsFeature": true,
    "MediaFeature": true,
    "OAuth2Feature": true,
    "HealthFeature": true,
    "MasterFeature": true
