{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "APPINSIGHTS_INSTRUMENTATIONKEY": "put-instrumentation-key-here",


  "CacheRedisSettings": {
    "ConnectionString": "vito-torres.redis.cache.windows.net:6380,password=put-psw-here=,ssl=True,abortConnect=False",
    "Instance": "0",
    "TokenExpirationInMinutes": 20,
    "IsCacheEnabled": false
  },
